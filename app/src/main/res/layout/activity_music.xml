<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.music.MusicPlayer">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="@string/app_name"
        app:subtitle="@string/album_name"
        app:titleTextAppearance="@style/ToolbarTitle"
        app:subtitleTextAppearance="@style/ToolbarSubtitle"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_ios_24" />
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/li"
        android:layout_below="@id/toolbar"
        android:layout_margin="15dp"/>
    <LinearLayout
        android:id="@+id/li"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:paddingBottom="20dp">
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/viewPagerTab"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            app:tabBackground="@drawable/dot_selector"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp"/>
        <RelativeLayout
            android:id="@+id/currentSeekDuration"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/selectedMusicCurrentPos"
                android:layout_width="70dp"
                android:layout_height="20dp"
                style="@style/Time"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:gravity="center_horizontal"/>
            <SeekBar
                android:id="@+id/selectedMusicSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/selectedMusicCurrentPos"
                android:layout_toRightOf="@+id/selectedMusicCurrentPos"
                android:layout_toStartOf="@+id/selectedMusicDuration"
                android:layout_toLeftOf="@+id/selectedMusicDuration"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/selectedMusicDuration"
                android:layout_width="70dp"
                android:layout_height="20dp"
                style="@style/Time"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="center_horizontal" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp">
            <com.example.musicv2.ui.BarAnimate
                android:id="@+id/barEqu"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/selectedMusicPrev"
                android:layout_toLeftOf="@+id/selectedMusicPrev"
                android:visibility="gone"/>
            <ImageButton
                android:id="@+id/selectedMusicPrev"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:background="@drawable/prev_btn"
                android:contentDescription="@string/app_name"
                android:layout_toStartOf="@+id/selectedMusicPlay"
                android:layout_toLeftOf="@+id/selectedMusicPlay"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp" />
            <Button
                android:id="@+id/selectedMusicPlay"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@drawable/play_btn"
                android:contentDescription="@string/app_name"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp" />
            <ImageButton
                android:id="@+id/selectedMusicNext"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="30dp"
                android:layout_centerVertical="true"
                android:background="@drawable/next_btn"
                android:contentDescription="@string/app_name"
                android:layout_toEndOf="@+id/selectedMusicPlay"
                android:layout_toRightOf="@+id/selectedMusicPlay"
                android:layout_marginLeft="30dp" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>